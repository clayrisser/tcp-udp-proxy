user nginx;
worker_processes  1;

error_log /var/log/nginx/error.log warn;
pid /var/run/nginx.pid;

events {
    worker_connections  1024;
}

stream {
    upstream backends {
        {{- $url := split (getenv "BACKENDS") "," }}
        {{- range $url }}
        server {{ . }};
        {{- end }}
    }
    server {
        {{- if (eq (toLower (getenv "PROTOCOL")) "udp") }}
        listen {{ getenv "LISTEN" }} udp;
        proxy_responses 1;
        {{- else }}
        listen {{ getenv "LISTEN" }};
        {{- end }}
        proxy_pass backends;
    }
}
